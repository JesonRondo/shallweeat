/**app.wxss**/
page {
  height: 100%;
}

button {
  margin-left: 10px;
  margin-right: 10px;
  padding-left: 0;
  padding-right: 0;
}

.container {
  display: flex;
  height: 100%;
  padding: 40px;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
}
.txt-panel {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.txt-panel text {
  color: #666;
  font-size: 14px;
  line-height: 2;
  text-align: center;
}
.btn-panel {
  padding-top: 40rpx;
  height: 340rpx;
}
