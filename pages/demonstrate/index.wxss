.container {
  display: flex;
  height: 100%;
  padding: 40px;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
  font-size: 14px;
}
.panel {
    width: 100%;
}
.panel button:first-child {
    margin-bottom: 20px;
}
.help {
    display: flex;
    flex-direction: column;
    font-size: 14px;
    color: #666;
    text-align: center;
    line-height: 1.4;
}
.list {
    display:flex;
    flex-direction:column;
    width:100%;
    line-height:1.4;
    text-align:center;
}